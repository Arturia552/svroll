{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "svroll",
  "mainBinaryName": "svroll",
  "version": "0.0.2",
  "identifier": "com.svroll.app",
  "plugins": {},
  "app": {
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "splashscreen",
        "title": "Loading svroll...",
        "width": 600,
        "height": 400,
        "center": true,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "closable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "theme": "Dark",
        "url": "/splashscreen.html",
        "visible": true
      },
      {
        "label": "main",
        "title": "svroll",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "useHttpsScheme": true,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "theme": "Dark",
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "shadow": true,
        "transparent": false,
        "visible": false
      }
    ]
  }
}
